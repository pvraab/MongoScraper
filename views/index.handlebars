<div class="container logo">
  <img src="/assets/images/history.capitolbroadcasting.jpg" class="img-fluid img-rounded center"
    alt="https://history.capitolbroadcasting.com/media-assets/ap-teletype-machine/" width=200 height=200>
  <h1 class="text-center">Articles!</h1>

  <div id="wrapper">

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="/">Mongo Scraper</a>
      <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="btn btn-danger home" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="btn btn-danger saved" href="/saved">Saved Articles</a>
          </li>
          <li class="nav-item">
            <a class="btn btn-danger scrape-new" href="/scrape">Scrape New Articles</a>
          </li>
          <li class="nav-item">
            <a class="btn btn-danger clear"  href="/clear">Clear Articles</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container-fluid bg-3 text-center">
      <div class="card-group">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Articles!</h5>

            <ul class="card-text">
              {{#each articles}}
              {{!-- <li>{{title}}</li> --}}
              {{> articles/article-block}}
              {{/each}}
            </ul>

          </div>
        </div>

      </div>

    </div>
  </div>